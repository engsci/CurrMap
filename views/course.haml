%h2= @course.course_code
%h3 @course.name
%p @course.calendar_entry
%h4 Professors
%ul
  - @course.staff.each do |p|
    %li
      %h4.prof_name= p.name
      .prof_info
        - %w(phone website email).each do |f|
          %p= "#{f.capitalize}: #{p.send(f)}" if p.send(f)
- if @course.activities          
  %h3 Activities
  %p= "#{@course.activities.map(&:class).map(&:to_s).grep(/Midterm/).length} Midterms"
  %p= "#{@course.activities.map(&:class).map(&:to_s).grep(/Lecture/).length} Lectures"
  %dl.activities
    - @course.activities.sort{|a,b| a.number <=> b.number}.each do |a|
      %dl.activity_listing= "Lecture #{a.number}"
      %dd 
        Outcomes
        %ul
          - a.outcomes.keys.each do |o|
            %li= o
%ul
  - @course.staff.each do |p|
    %li
      %h4.prof_name
        %a(href="/prof/#{p._id}" rel="facebox" )
          = p.name
%h4 Resources
= @course.resources

