%h3 Courses
-@courses = @collection
-prevyear = 0
-prevsem = ""
- @courses.each do |course|
  - if course.year != prevyear
    %h4= "Year " + course.year
    - prevyear = course.year
  - if course.semester != prevsem
    %h4= "Semester " + course.semester
    - prevsem = course.semester
  .course
    %h2
      %a(href="/course/#{course.course_code}" rel="facebox[.full]" title="#{course.name}")
        =course.short_code
        %a(href="/course/#{course.course_code}") +
    
    .activities
      %h5 Activities
      %dl
        = if course.activities
          - course.activities.each do |a|
            %dt.activity(class="#{a.type}")
            - a.outcomes.keys.each do |o|
              %dd= o
      
