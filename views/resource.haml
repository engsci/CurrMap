-@resource = @object
.resource.object
  %h1= @resource.name
  %dl
    
    - if @resource.author
      %dt Authors
      - @resource.author.each do |a| 
        %dd= a

    - %w(publisher type isbn edition).each do |f|
      - if @resource.send(f)
        %dt= f.capitalize
        %dd= @resource.send(f)
