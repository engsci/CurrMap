!!! Strict
%html
  %head
    %link(rel="stylesheet" href="/stylesheets/screen.css" type="text/css" media="screen")
    %link(rel="stylesheet" href="/facebox/facebox.css" type="text/css" media="screen")
    -# %script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript")
    -# %script(src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js" type="text/javascript")
    %script(src="/jquery/jquery.min.js" type="text/javascript")
    %script(src="/jquery/jquery-ui.min.js" type="text/javascript")
    %script(type="text/javascript" src="/facebox/facebox.js")
    %script(type="text/javascript" src="/app.js")
  
    %title
      -if @title
        = @title+" : CurrMap"
      - else
        = "CurrMap"
  %body
    #header
      %h1 
        %a(href="/") CurrMap
      
      %form(action="/results" method="get")
        %input(type="text" name="query" value="#{params[:query] || 'Search'}" size="40" id="ferret_search")
        -#
          %select(name="scope")
            %option(value="all") All
            - %w(courses people resources collections).each do |model|
              %option(value="#{model}"){:selected=>(params[:class] == model)}= model.capitalize
        %input(type="submit" value="Search" id="ferret_submit")
        
      %ul#menu
        %li
          %a(href="#") Courses
        %li
          %a(href="#") Lexicon
        %li
          %a(href="#") Account
        -#
          - 
       
    #content
      #main
        = yield
      #sidebar
        = partial ((defined? sidebar) ? sidebar : :'_models')
    