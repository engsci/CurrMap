%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  
  - unless devise_error_messages!.empty?
    .error_flash
      = devise_error_messages!
  
  %p
    = f.label :email
    %br/
    = f.text_field :email, :class => "required email"
  %p
    = f.label :password
    %br/
    = f.password_field :password, :class => "required", :minlength => 6
  %p
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, :class => "required", :equalTo => "#user_password"
  %p= f.submit "Sign up"
= render :partial => "devise/shared/links"
