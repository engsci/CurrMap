-if @courses && @courses.length > 0
  #courses.facet
    %h2 Courses
    %ul
      - @courses.each do |course|
        %li= link_to course.id, course, :rel => 'facebox[.full]'
      %li.more= link_to "More"
-if @resources && @resources.length > 0
  #resources.facet
    %h2 Resources
    %ul
      - @resources.each do |resource|
        %li
          = link_to resource.name, resource, :rel => 'facebox', :class => 'title'
          -#.nearterms= resource[:highlight].join(' ')
          .author
            - resource.authors.each do |author|
              %a= author
      -#
        %li.more
          %a(href="#") More
        
-if @people && @people.length > 0
  #people.facet
    %h2 People
    %ul
      - @people.each do |person|
        %li= link_to person.name, person, :rel => 'facebox'
- if @enable_all
  #all.facet
    %h2 All
    %ul            
      - unless @results and @results.length > 0
        %li Sorry, no results. Please try another query.
      - else
        - @results.each do |result|
          %li
            %h3= link_to result.name || result.id, result, :rel => "facebox[.full]"
          -#
            %ul
              %li
                %a.title= result[:name] || "&nbsp;"
                .nearterms= result[:highlight].join(' ')
                %a.week(href="#")= result[:model].downcase