!!! 5
%html
  %head
    %title Currmap
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    = stylesheet_link_tag 'facebox/facebox.css', :media => 'screen'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js"
    = javascript_include_tag 'facebox', 'app'
    = csrf_meta_tag
  %body
    #header
      %h1 
        %a(href="/") CurrMap

      %form(action="/results" method="get")
        %input(type="text" name="query" value="#{params[:query] || 'Search'}" size="40" id="ferret_search")
        -#
          %select(name="scope")
            %option(value="all") All
            - %w(courses people resources collections).each do |model|
              %option(value="#{model}"){:selected=>(params[:class] == model)}= model.capitalize
        %input(type="submit" value="Search" id="ferret_submit")

      %ul#menu
        %li
          %a(href="courses") Courses
        %li
          %a(href="#") Lexicon
        %li
          %a(href="#") Account
        -#
          - 

    #content
      #main
        = yield
      #sidebar
        = render :partial => 'layouts/sidebar'
      #footer
        Department of Engineering Science, University of Toronto &copy; 2010
        %ul
          %li= link_to "About"
          %li= link_to "Help"
          %li= link_to "Contact"
          

      
