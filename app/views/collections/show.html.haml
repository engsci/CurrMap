=link_to "expand", @collection, :class => "expand"
%h1= link_to @collection.name, @collection
%dl
  -#if @collection.collections.length > 0
    %dt Subcollections
    - @collection.collections.each do |c|
      - if c._id
        %dd= link_to c.name, c, :rel => "facebox"
  - unless @collection.courses.empty?
    %dt Courses
    - @collection.courses.each do |c|
      %dd= link_to c.course_code, c, :rel => "facebox"

= link_to 'Edit', edit_collection_path(@collection)
\|
= link_to 'Back', collections_path
