-if user_signed_in?
  #admin_controls
    - if @course
      = link_to 'Edit', {:action => 'edit', :id => @course.short_code, :delivered_year => @course.delivered_year}, :class => "#{"active" if action_name ==  "edit"}"
    - if controller_name == 'people'
      - if action_name == 'index'
        = link_to 'New Professor', {:action => :new, :class => "professor"} if can? :create, @person
      - if action_name == 'show'
        = link_to 'Edit', edit_polymorphic_path(@person) if can? :edit, @person
      - if action_name == 'edit'
        = link_to 'Show', polymorphic_path(@person) if can? :read, @person
        = link_to 'Delete', polymorphic_path(@person), :method => :delete, :confirm => "Are you sure?" if can? :destroy, @person