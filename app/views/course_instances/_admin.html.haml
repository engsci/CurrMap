- if action_name == 'edit'
  = link_to 'Show', @course if can? :read, @course
  = link_to 'Delete', @course, :method => :delete, :confirm => "Are you sure?" if can? :destroy, @course
- elsif %w(show topics activities resources).include? action_name
  = link_to 'Edit Course', edit_course_path(@course.course) if can? :edit, @course.course
  = link_to 'Edit Instance', edit_course_instance_path(@course.course, @course) if can? :edit, @course
  = link_to 'New Instance', new_course_instance_path(@course.course) if can? :create, CourseInstance