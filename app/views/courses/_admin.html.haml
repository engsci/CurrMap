- if action_name == 'index'
  = link_to "New Course", new_course_path if can? :create, Course
- elsif action_name == 'show'
  = link_to 'Edit Course', edit_course_path(@course) if can? :edit, @course
  = link_to 'New Instance', new_course_instance_path(@course) if can? :create, CourseInstance
- elsif action_name == 'edit'
  = link_to 'Show', @course if can? :read, @course
  = link_to 'Delete', @course, :method => :delete, :confirm => "Are you sure?" if can? :destroy, @course